<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_nav_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px88dp"
    android:background="@color/color_303433"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/nav_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/px32sp" />

        <TextView
            android:id="@+id/nav_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_white_back"
            android:drawablePadding="@dimen/px10dp"
            android:gravity="center"
            android:minWidth="@dimen/px100dp"
            android:paddingLeft="@dimen/px20dp"
            android:scaleType="centerInside"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/px32sp" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px40dp"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>