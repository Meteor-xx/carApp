<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_24272c"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/firstAdver"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px300dp"
                android:background="@color/color_eeeeee"
                android:visibility="gone">
            </androidx.viewpager.widget.ViewPager>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px800dp"
                android:layout_margin="@dimen/px30dp"
                app:cardBackgroundColor="@color/color_24272c"
                app:cardCornerRadius="@dimen/px8dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/bikeImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px300dp"
                    android:layout_marginTop="@dimen/px100dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/main_car" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px450dp"
                    android:padding="@dimen/px50dp"
                    android:orientation="vertical"
                    android:textSize="@dimen/px30sp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px125dp"
                        android:orientation="horizontal"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/main_tower_img"
                                android:layout_width="@dimen/px40sp"
                                android:layout_height="@dimen/px40sp"
                                android:src="@mipmap/main_tower"
                                android:layout_marginLeft="@dimen/px20dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                ></ImageView>
                            <TextView
                                android:id="@+id/main_tower_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_tower_default"
                                android:textColor="@color/color_white"
                                android:textAlignment="center"
                                app:layout_constraintLeft_toRightOf="@+id/main_tower_img"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="@dimen/px40sp"
                                >
                            </TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/main_miles_img"
                                android:layout_width="@dimen/px40sp"
                                android:layout_height="@dimen/px40sp"
                                android:src="@mipmap/main_miles"
                                android:layout_marginLeft="@dimen/px40sp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                ></ImageView>
                            <TextView
                                android:id="@+id/main_miles_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_miles_default"
                                android:textColor="@color/color_white"
                                android:textAlignment="center"
                                app:layout_constraintLeft_toRightOf="@+id/main_miles_img"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="@dimen/px40sp"
                                >
                            </TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px125dp"
                        android:orientation="horizontal"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/main_locate_img"
                                android:layout_width="@dimen/px40sp"
                                android:layout_height="@dimen/px40sp"
                                android:src="@mipmap/main_locate"
                                android:layout_marginLeft="@dimen/px20dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                ></ImageView>
                            <TextView
                                android:id="@+id/main_locate_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_locate_default"
                                android:textColor="@color/color_white"
                                android:textAlignment="center"
                                app:layout_constraintLeft_toRightOf="@+id/main_locate_img"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="@dimen/px40sp"
                                >
                            </TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/main_waste_img"
                                android:layout_width="@dimen/px40sp"
                                android:layout_height="@dimen/px40sp"
                                android:src="@mipmap/main_waste"
                                android:layout_marginLeft="@dimen/px40sp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                ></ImageView>
                            <TextView
                                android:id="@+id/main_waste_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_waste_default"
                                android:textColor="@color/color_white"
                                android:textAlignment="center"
                                app:layout_constraintLeft_toRightOf="@+id/main_waste_img"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="@dimen/px40sp"
                                >
                            </TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <yunkeiot.com.carapp.ui.view.CAGridView
                android:id="@+id/main_functions_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_24272c"
                android:numColumns="3"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>