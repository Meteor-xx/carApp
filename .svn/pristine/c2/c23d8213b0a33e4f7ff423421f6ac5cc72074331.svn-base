<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_303433"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px24dp"
    android:paddingTop="@dimen/px20dp"
    android:paddingRight="@dimen/px40dp"
    android:paddingBottom="@dimen/px20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2019年10月"
            android:textColor="@color/color_white"
            android:textSize="@dimen/px32sp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="524.8公里"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px28sp"
            android:textAlignment="textEnd"></TextView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_gray"
        app:cardCornerRadius="@dimen/px15dp"
        android:layout_marginTop="@dimen/px28sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px10dp"
                android:background="@drawable/layout_bottom_border"
                >
                <ImageView
                    android:id="@+id/card_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/trails_car"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/travel_start_time"
                    android:textSize="@dimen/px20sp"
                    android:text="2019.10.27 15:08:10"
                    android:textColor="@color/color_bbbbbb"
                    android:layout_marginLeft="@dimen/px30sp"
                    app:layout_constraintLeft_toRightOf="@+id/card_car"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_darkGray"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:padding="@dimen/px28sp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px28sp"
                        android:src="@mipmap/main_locate"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px28sp"
                        android:src="@mipmap/main_locate"
                        android:layout_marginTop="@dimen/px28sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px28sp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/travel_sAddress"
                        android:textSize="@dimen/px28sp"
                        android:text="规划起点"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/travel_eAddress"
                        android:textSize="@dimen/px28sp"
                        android:text="规划终点"
                        android:textColor="@color/color_white"
                        android:layout_marginTop="@dimen/px28sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:padding="@dimen/px28sp">
                    <TextView
                        android:id="@+id/travel_miles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6.9km"
                        android:textSize="@dimen/px28sp"
                        android:textColor="@color/color_white"
                        android:textAlignment="center"
                       >
                    </TextView>
                    <TextView
                        android:id="@+id/consText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="导航里程"
                        android:textColor="@color/color_bbbbbb"
                        android:textSize="@dimen/px24sp"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:padding="@dimen/px28sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/driver_time"
                        android:text="00:25:14"
                        android:textSize="@dimen/px26sp"
                        android:textAlignment="center"
                        android:textColor="@color/color_white">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="驾驶时长"
                        android:textSize="@dimen/px26sp"
                        android:textAlignment="center"
                        android:textColor="@color/color_bbbbbb">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:padding="@dimen/px28sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/avgSpeed"
                        android:text="16km/h"
                        android:textSize="@dimen/px26sp"
                        android:textAlignment="center"
                        android:textColor="@color/color_white">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="平均速度"
                        android:textSize="@dimen/px26sp"
                        android:textAlignment="center"
                        android:textColor="@color/color_bbbbbb">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:padding="@dimen/px28sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/maxSpeed"
                        android:text="73km/h"
                        android:textSize="@dimen/px26sp"
                        android:textAlignment="center"
                        android:textColor="@color/color_white">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="最快速度"
                        android:textSize="@dimen/px26sp"
                        android:textAlignment="center"
                        android:textColor="@color/color_bbbbbb">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>